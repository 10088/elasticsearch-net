{
  "elasticsearchprojects": {
    "properties": {
      "myAttachment": {
        "type": "attachment",
        "fields": {
          "myAttachment": {
            "type": "string",
            "store": true,
            "index": "not_analyzed"
          },
          "title": {
            "type": "string",
            "store": false,
            "index": "not_analyzed"
          },
          "contents": {
            "type": "string",
            "store": false,
            "index": "not_analyzed"
          },
          "author": {
            "type": "string",
            "store": false,
            "index": "analyzed"
          },
          "date": {
            "type": "date",
            "store": false,
            "include_in_all": true
          }
        }
      }
    }
  }
}
