{
  "elasticsearchprojects": {
    "properties": {
      "my_img": {
        "name": "my_img",
        "type": "image",
        "feature": {
          "CEDD": {
            "hash": "BIT_SAMPLING"
          },
          "JCD": {
            "hash": [
              "BIT_SAMPLING",
              "LSH"
            ]
          }
        },
        "metaData": {
          "jpeg.image_width": {
            "type": "string",
            "store": "yes"
          },
          "jpeg.image_height": {
            "type": "string",
            "store": "yes"
          }
        }
      }
    }
  }
}